{
  "node_types": {
    "Apache": {
      "properties_schema": {
        "__comment": "properties are mapped to operations' input parameters; logs are default output of operations",
        "HTTPPort": {
          "type": "string",
          "default": "8080"
        }
      },
      "operations": {
        "install": [ "apache_install" ]
      }
    },
    "MySQL": {
      "operations": {
        "install": [ "mysql_install" ]
      }
    }
  },
  "artifacts": {
    "apache_install": {
      "type": "WAR",
      "properties": {
        "InvocationType": "SOAP+HTTP"
      },
      "references": [
        "http://some/remote/location/to/fetch/file.war",
        "./some/local/path/to/file.war"
      ]
    },
    "mysql_install": {
      "type": "DockerCompose",
      "references": [
        "./mysql/docker-compose.yml"
      ]
    }
  },
  "topologies": {
    "ProductionEnv": {
      "nodes": {
        "ApacheHTTPServer": {
          "type": "Apache",
          "properties": {
            "HTTPPort": "8081"
          }
        },
        "MySQLDBServer": {
          "type": "MySQL"
        }
      },
      "relationships": {
        "ApacheConnectsToMySQL": {
          "type": "connects_to",
          "source": "ApacheHTTPServer",
          "target": "MySQLDBServer"
        }
      }
    }
  }
}
